<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4d4d4d"
    android:padding="0dp">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="207dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:background="#ffffff"
        android:gravity="bottom|right"
        android:textSize="70sp"
        android:nestedScrollingEnabled="false"
        android:maxLines="2"
        android:maxLength="17"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_above="@+id/btnMinus"
        android:layout_alignParentTop="true" />

    <Button
        android:text="."
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnDec"
        android:background="#4d4d4d"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:onClick="onClickNumber"
        android:layout_above="@+id/btnClear"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:text="-"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnNeg"
        android:background="#4d4d4d"
        android:textSize="30sp"
        android:textColor="#ffffff"
        tools:text="(-)"
        android:onClick="onClickNumber"
        android:layout_above="@+id/btnClear"
        android:layout_toEndOf="@+id/btnDec" />

    <Button
        android:text="0"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn0"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnDec"
        android:layout_alignParentStart="true" />

    <Button
        android:text="="
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/btnEqual"
        android:background="#4d4d4d"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:onClick="onClickEqual"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnClear" />

    <Button
        android:text="รท"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnDiv"
        android:background="#4d4d4d"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:onClick="onClickOperator"
        android:layout_above="@+id/btnNeg"
        android:layout_toEndOf="@+id/btnNeg" />

    <Button
        android:text="*"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnMult"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/btnDiv"
        android:layout_alignStart="@+id/btnDiv" />

    <Button
        android:text="-"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnMinus"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/btnMult"
        android:layout_alignStart="@+id/btnMult" />

    <Button
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn3"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnMult"
        android:layout_toEndOf="@+id/btnDec" />

    <Button
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/btn0"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn2"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn6"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn5"
        android:onClick="onClickNumber"
        android:background="#4d4d4d"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn4"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#4d4d4d"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="9"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn9"
        android:onClick="onClickNumber"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#4d4d4d"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:text="8"
        android:layout_height="60dp"
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:background="#4d4d4d"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="onClickNumber"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/btn9" />

    <Button
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btn7"
        android:onClick="onClickNumber"
        android:background="#4d4d4d"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <Button
        android:text="AC"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnClear"
        android:background="#4d4d4d"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="onClickClear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="+"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/btnPlus"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/btnNeg"
        android:layout_toEndOf="@+id/btnNeg"
        android:layout_below="@+id/btnDiv" />


</RelativeLayout>